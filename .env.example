# ==============================================================================
# DJANGO CONFIGURATION
# ==============================================================================

# Django Secret Key (CHANGE THIS IN PRODUCTION!)
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# Debug mode (True for development, False for production)
DJANGO_DEBUG=True

# Allowed hosts (comma-separated)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL connection URL (automatically set by Docker Compose)
# Format: postgresql://user:password@host:port/database
# Docker: DATABASE_URL=postgresql://postgres:postgres@db:5432/webnovel
# Railway: Automatically provided by Railway PostgreSQL service
DATABASE_URL=

# ==============================================================================
# REDIS & CELERY CONFIGURATION
# ==============================================================================

# Redis connection URL (automatically set by Docker Compose)
# Docker: REDIS_URL=redis://redis:6379/0
# Railway: Automatically provided by Railway Redis service
REDIS_URL=redis://localhost:6379/0

# Celery broker URL (usually same as REDIS_URL)
CELERY_BROKER_URL=redis://localhost:6379/0

# ==============================================================================
# OPENAI CONFIGURATION
# ==============================================================================

# OpenAI API key for translations
OPENAI_API_KEY=your-openai-api-key-here

# ==============================================================================
# AWS S3 CONFIGURATION (Optional - for media files in production)
# ==============================================================================

# AWS credentials (leave empty to use local storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=eu-central-1

# ==============================================================================
# FEATURED CONTENT (Optional)
# ==============================================================================

# Comma-separated list of BookMaster IDs to feature on homepage
FEATURED_BOOKS=

# Comma-separated list of Genre IDs to feature
FEATURED_GENRES=

# ==============================================================================
# RAILWAY-SPECIFIC (Auto-populated by Railway)
# ==============================================================================

# Railway environment indicator
RAILWAY_ENVIRONMENT=

# Railway public domain
RAILWAY_PUBLIC_DOMAIN=